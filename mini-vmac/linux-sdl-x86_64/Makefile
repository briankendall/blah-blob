# This is set to build using a custom compile of libSDL2, installed to /usr/local/lib
# If you want to use the system libSDL, then simply replace:
# /usr/local/lib/libSDL2.a /usr/local/lib/libSDL2main.a
# ...with:
# -lSDL2

BlahBlob : $(ObjFiles)
	gcc \
		-o "BlahBlob" \
		$(ObjFiles) \
		-static-libgcc /usr/local/lib/libSDL2.a /usr/local/lib/libSDL2main.a -lpthread -lm -ldl
	strip --strip-unneeded "BlahBlob"

clean :
	rm -f $(ObjFiles)
	rm -f "BlahBlob"
